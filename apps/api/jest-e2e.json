{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "rootDir": ".",
  "testMatch": ["<rootDir>/test/e2e/**/*.e2e-spec.ts"],
  "setupFiles": ["<rootDir>/test/e2e/jest.setup.ts"],
  "moduleFileExtensions": ["js", "json", "ts"],
  "transform": {
    "^.+\\.(t|j)s$": ["ts-jest", { "tsconfig": "tsconfig.json" }]
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "verbose": true,
  "testTimeout": 60000
}
