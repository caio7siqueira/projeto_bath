{
  "name": "@efizion/api",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "build": "tsc -p tsconfig.json",
    "start": "if [ \"$NODE_ENV\" = \"production\" ]; then pnpm db:deploy; fi && node dist/main.js",
    "lint": "eslint .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "jest",
    "pretest:e2e": "prisma generate",
    "test:e2e": "jest --config ./jest-e2e.json --runInBand",
    "verify:emit": "node -e \"require('fs').accessSync('dist/main.js')\"",
    "openapi:bundle": "ts-node src/docs/generate-openapi.ts"
  },
  "prisma": {
    "schema": "../../prisma/schema.prisma"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/schedule": "^4.0.0",
    "@nestjs/swagger": "^7.1.3",
    "@nestjs/throttler": "^6.5.0",
    "@prisma/client": "^5.22.0",
    "bcrypt": "^5.1.1",
    "bullmq": "^5.12.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^16.4.5",
    "ioredis": "^5.3.2",
    "libphonenumber-js": "^1.11.7",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pino": "^9.0.0",
    "prisma": "^5.14.0",
    "rxjs": "^7.8.2",
    "swagger-ui-express": "^5.0.0",
    "twilio": "^5.3.4"
  },
  "devDependencies": {
    "@nestjs/testing": "^10.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.6",
    "@types/jest": "^29.5.14",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint-config-prettier": "^10.1.8",
    "execa": "^8.0.1",
    "jest": "^29.7.0",
    "openapi-types": "^12.1.3",
    "openapi3-ts": "^4.5.0",
    "supertest": "^7.0.0",
    "testcontainers": "^11.10.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3",
    "yaml": "^2.8.2"
  }
}
